<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PottiRoma.App.Views.ListClientsForSalePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    Title="Clientes para registrar venda"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="#fafafa">

    <Grid>
        <Grid.Margin>
            <OnPlatform
                x:TypeArguments="Thickness"
                Android="0,0,0,0"
                iOS="0,24,0,0" />
        </Grid.Margin>

        <StackLayout Margin="0,10,0,30" Spacing="10">

            <SearchBar
                x:Name="SearchBarClientes"
                Margin="0,0,10,0"
                BackgroundColor="Transparent"
                CancelButtonColor="Transparent"
                FontSize="14"
                HeightRequest="35"
                Placeholder="Pesquise..."
                TextChanged="FloatingSearchBar_SearchTextChanged"
                TextColor="#878688" />

            <ContentView HeightRequest="10" />


            <syncfusion:SfListView
                x:Name="ClientsListView"
                ItemSize="65"
                ItemsSource="{Binding Clientes}"
                SelectionBackgroundColor="#f0f0f0">
                <syncfusion:SfListView.Behaviors>
                    <behaviors:EventToCommandBehavior
                        Command="{Binding ClienteSelectedCommand}"
                        EventArgsParameterPath="ItemData"
                        EventName="ItemTapped" />
                </syncfusion:SfListView.Behaviors>
                <syncfusion:SfListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid BackgroundColor="White" HeightRequest="65">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="1" />
                                </Grid.RowDefinitions>

                                <BoxView
                                    Grid.Row="1"
                                    BackgroundColor="{StaticResource CorBoxSeparetorLine}"
                                    HeightRequest="1"
                                    VerticalOptions="End" />

                                <Label
                                    Grid.Row="0"
                                    Margin="16,0,0,0"
                                    FontSize="14"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource TitleContentList}"
                                    Text="Fulano de Tal"
                                    VerticalOptions="Center" />

                                <Image
                                    Margin="0,0,16,0"
                                    HeightRequest="16"
                                    HorizontalOptions="End"
                                    Source="right.png"
                                    VerticalOptions="Center"
                                    WidthRequest="16" />
                            </Grid>

                        </ViewCell>
                    </DataTemplate>
                </syncfusion:SfListView.ItemTemplate>
            </syncfusion:SfListView>

        </StackLayout>
    </Grid>

</ContentPage>