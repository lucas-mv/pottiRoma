<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PottiRoma.App.Views.EditPersonalDataPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PottiRoma.App.Controls"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:renderers="clr-namespace:PottiRoma.App.CustomRenderers"
    Title="Editar Dados Pessoais"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource LightBackgroundColor}">

    <ScrollView>
        <Grid
            x:Name="EditPersonalDataPageContent"
            HeightRequest="{Binding ScreenHeightRequest}"
            SizeChanged="EditPersonalDataPageContent_SizeChanged">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Aspect="AspectFill"
                Source="banner_perfil.png" />

            <!--  TROCAR ESSE BANNER PQ TA REPETIDO  -->

            <ScrollView Grid.Row="1" VerticalOptions="Center">
                <StackLayout Margin="16,8,16,8" Spacing="8">
                    <ContentView HeightRequest="4" />
                    <Label
                        Margin="12,0,0,0"
                        FontAttributes="Bold"
                        FontSize="{StaticResource StandardFontSize}"
                        Text="{Binding User.UserName}"
                        TextColor="{StaticResource TextColor}" />
                    <ContentView HeightRequest="8" />
                    <Label
                        Margin="12,0,0,0"
                        FontAttributes="Bold"
                        FontSize="{StaticResource StandardFontSize}"
                        Text="{Binding User.Cpf}"
                        TextColor="{StaticResource TextColor}" />
                    <ContentView HeightRequest="4" />
                    <Frame
                        Grid.Row="1"
                        Padding="0"
                        BackgroundColor="{StaticResource WhiteColor}"
                        HeightRequest="40"
                        OutlineColor="{StaticResource OutlineColor}">
                        <renderers:CustomEntry
                            Margin="10,0,10,0"
                            FontSize="{StaticResource StandardFontSize}"
                            Keyboard="Email"
                            Placeholder="Email"
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            Text="{Binding User.Email}"
                            TextColor="{StaticResource TextColor}"
                            VerticalOptions="Center" />
                    </Frame>
                    <Frame
                        Grid.Row="1"
                        Padding="0"
                        BackgroundColor="{StaticResource WhiteColor}"
                        HeightRequest="40"
                        OutlineColor="{StaticResource OutlineColor}">
                        <renderers:CustomEntry
                            Margin="10,0,10,0"
                            FontSize="{StaticResource StandardFontSize}"
                            Placeholder="Telefone 1"
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            Text="{Binding User.PrimaryTelephone}"
                            TextColor="{StaticResource TextColor}"
                            VerticalOptions="Center" />
                    </Frame>
                    <Frame
                        Grid.Row="1"
                        Padding="0"
                        BackgroundColor="{StaticResource WhiteColor}"
                        HeightRequest="40"
                        OutlineColor="{StaticResource OutlineColor}">
                        <renderers:CustomEntry
                            Margin="10,0,10,0"
                            FontSize="{StaticResource StandardFontSize}"
                            Placeholder="Telefone 2"
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            Text="{Binding User.SecondaryTelephone}"
                            TextColor="{StaticResource TextColor}"
                            VerticalOptions="Center" />
                    </Frame>
                    <Frame
                        Grid.Row="1"
                        Padding="0"
                        BackgroundColor="{StaticResource WhiteColor}"
                        HeightRequest="40"
                        OutlineColor="{StaticResource OutlineColor}">
                        <renderers:CustomEntry
                            Margin="10,0,10,0"
                            FontSize="{StaticResource StandardFontSize}"
                            Placeholder="CEP"
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            Text="{Binding User.Cep}"
                            TextColor="{StaticResource TextColor}"
                            VerticalOptions="Center" />
                    </Frame>
                    <ContentView HeightRequest="8" />
                </StackLayout>

            </ScrollView>

            <Button
                Grid.Row="2"
                Margin="16"
                Command="{Binding ChangePasswordCommand}"
                Style="{StaticResource ButtonDefault}"
                Text="ALTERAR SENHA"
                VerticalOptions="Center" />

        </Grid>
    </ScrollView>



</ContentPage>