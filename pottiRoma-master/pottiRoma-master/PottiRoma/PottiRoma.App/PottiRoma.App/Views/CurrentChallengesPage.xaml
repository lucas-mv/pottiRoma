<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PottiRoma.App.Views.CurrentChallengesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    Title="Desafios da Temporada"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource DarkBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Aspect="AspectFill"
            Source="banner_challenge.jpg" />

        <Grid
            Grid.Row="1"
            Margin="16,-120,16,16"
            BackgroundColor="{StaticResource DarkBackgroundColor}">

            <syncfusion:SfListView
                HorizontalOptions="Fill"
                ItemSize="165"
                ItemSpacing="0"
                ItemsSource="{Binding Challenges}"
                SelectionBackgroundColor="Transparent"
                VerticalOptions="Fill">
                <syncfusion:SfListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                Padding="0"
                                BackgroundColor="White"
                                HasShadow="True"
                                HeightRequest="160"
                                OutlineColor="{StaticResource OutlineColor}"
                                VerticalOptions="Start">
                                <Grid Margin="0" BackgroundColor="White">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="70" />
                                        <RowDefinition Height="45" />
                                    </Grid.RowDefinitions>

                                    <ContentView
                                        Grid.Row="0"
                                        Margin="0"
                                        BackgroundColor="{StaticResource SelectionBackgroundColor}"
                                        HeightRequest="55"
                                        VerticalOptions="Start" />
                                    <Label
                                        Margin="16,0,0,0"
                                        FontSize="{StaticResource LargeFontSize}"
                                        HorizontalOptions="Start"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource TextColor}"
                                        VerticalOptions="Center" />

                                    <Label
                                        Grid.Row="1"
                                        Margin="16,8,16,8"
                                        FontSize="{StaticResource StandardFontSize}"
                                        HorizontalOptions="Start"
                                        HorizontalTextAlignment="Start"
                                        Text="{Binding Description}"
                                        TextColor="{StaticResource LightTextColor}"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Label
                                            Margin="16,0,0,16"
                                            FontSize="{StaticResource LargeFontSize}"
                                            HorizontalOptions="Start"
                                            Text="{Binding PrizeFormatted}"
                                            TextColor="{StaticResource TextColor}"
                                            VerticalOptions="Center" />
                                        <ContentView
                                            Grid.Column="1"
                                            Margin="0,0,18,20"
                                            BackgroundColor="{StaticResource ToolBarColor}" />
                                        <Label
                                            Grid.Column="1"
                                            Margin="8,0,0,16"
                                            FontAttributes="Bold"
                                            FontSize="{StaticResource SmallFontSize}"
                                            HorizontalOptions="Start"
                                            Text="{Binding ParameterFormatted}"
                                            TextColor="{StaticResource WhiteColor}"
                                            VerticalOptions="Center" />
                                        <StackLayout
                                            Grid.Column="1"
                                            Margin="0,0,26,16"
                                            HorizontalOptions="End"
                                            Orientation="Horizontal"
                                            VerticalOptions="Center">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="{StaticResource SmallFontSize}"
                                                Text="{Binding CurrentSituation}"
                                                TextColor="{StaticResource WhiteColor}" />
                                        </StackLayout>
                                    </Grid>


                                </Grid>
                            </Frame>

                        </ViewCell>
                    </DataTemplate>
                </syncfusion:SfListView.ItemTemplate>
            </syncfusion:SfListView>

        </Grid>
    </Grid>

</ContentPage>