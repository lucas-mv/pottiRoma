                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Text="asfdfasafsfas"
                            TextColor="{StaticResource LightBackgroundColor}"
                            VerticalOptions="Start"
                            VerticalTextAlignment="Start" />
                    </Grid>
                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentView>
</ContentPage>