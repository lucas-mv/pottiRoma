<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PottiRoma.App.Views.RankingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:sfcarousel="clr-namespace:Syncfusion.SfCarousel.XForms;assembly=Syncfusion.SfCarousel.XForms"
    Title="Ranking"
    prism:ViewModelLocator.AutowireViewModel="True"
    Icon="ic_menu_white.png">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="CarouselRankingTemplate">
                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Image
                        HeightRequest="450"
                        Source="banner_ranking1.png"
                        WidthRequest="220" />
                    <Label
                        Margin="16,32,8,0"
                        FontAttributes="Bold"
                        FontSize="{StaticResource StandardFontSize}"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Start"
                        Text="asfdfasafsfas"
                        TextColor="{StaticResource LightBackgroundColor}"
                        VerticalOptions="Start"
                        VerticalTextAlignment="Start" />
