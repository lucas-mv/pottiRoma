                    Margin="10,0,10,0"
                    FontAttributes="Bold"
                    FontSize="14"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Clique aqui para ver seu posicionamento geral na venda de produtos Potti Romã."
                    TextColor="{StaticResource LightBackgroundColor}"
                    VerticalOptions="Center" />

            </Grid>


            <ScrollView
                x:Name="ScrollView"
                Grid.Row="2"
                Grid.Column="1"
                Orientation="Horizontal">
                <StackLayout
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Grid HorizontalOptions="Center" VerticalOptions="Center">
                        <Image
                            Aspect="Fill"
                            Source="banner_ranking1.png"
                            WidthRequest="160" />
                        <Label
                            Margin="16,32,8,0"
                            FontAttributes="Bold"
                            FontSize="{StaticResource StandardFontSize}"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Text="asfdfasafsfas"
                            TextColor="{StaticResource LightBackgroundColor}"
                            VerticalOptions="Start"
                            VerticalTextAlignment="Start" />
                    </Grid>
                    <Grid HorizontalOptions="Center" VerticalOptions="Center">
                        <Image
                            Aspect="Fill"
                            Source="banner_ranking1.png"
                            WidthRequest="160" />
                        <Label
                            Margin="16,32,8,0"
