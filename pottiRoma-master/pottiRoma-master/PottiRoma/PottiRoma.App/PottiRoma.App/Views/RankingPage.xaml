<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PottiRoma.App.Views.RankingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:sfcarousel="clr-namespace:Syncfusion.SfCarousel.XForms;assembly=Syncfusion.SfCarousel.XForms"
    Title="Ranking"
    prism:ViewModelLocator.AutowireViewModel="True"
    Icon="ic_menu_white.png">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="CarouselRankingTemplate">
                <Grid HeightRequest="280">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.GoToRankingPageCommand, Source={x:Reference PageContent}}" CommandParameter="{Binding .}" />
                    </Grid.GestureRecognizers>
                    <Image Aspect="AspectFill" Source="{Binding Image}" />
                    <ContentView
                        Margin="0"
                        BackgroundColor="Black"
                        IsEnabled="False"
                        Opacity="0.3" />
                    <Label
                        Margin="16,50,16,16"
                        FontAttributes="Bold"
                        FontSize="{StaticResource StandardFontSize}"
                        HeightRequest="90"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Start"
                        Text="{Binding Description}"
                        TextColor="{StaticResource LightBackgroundColor}"
                        VerticalOptions="Start"
                        VerticalTextAlignment="Start" />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentView x:Name="PageContent" BackgroundColor="{StaticResource LightBackgroundColor}">
        <Grid ColumnSpacing="12" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="12" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="12" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Row="1"
                Grid.Column="1"
                Aspect="AspectFill"
                Source="ranking_geral.png" />
            <ContentView
                Grid.Row="1"
                Grid.Column="1"
                Margin="0"
                BackgroundColor="Black"
                Opacity="0.3" />

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToGeneralRankingPageCommand}" />
                </Grid.GestureRecognizers>
                <StackLayout Grid.Row="1">
                    <Label
                        FontAttributes="Bold"
                        FontSize="{StaticResource UltraLargeFontSize}"
                        HorizontalOptions="Center"
                        Text="DESAFIOS DA TEMPORADA"
                        TextColor="{StaticResource LightBackgroundColor}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="{StaticResource SuperLargeFontSize}"
                        HorizontalOptions="Center"
                        Text="POTTI ROMÃ"
                        TextColor="{StaticResource LightBackgroundColor}"
                        VerticalOptions="Center" />
                </StackLayout>

                <Label
                    Grid.Row="2"
                    Margin="10,0,10,0"
                    FontAttributes="Bold"
                    FontSize="{StaticResource StandardFontSize}"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Clique aqui para ver os desafios da Temporada!"
                    TextColor="{StaticResource LightBackgroundColor}"
                    VerticalOptions="Center" />

            </Grid>

            <sfcarousel:SfCarousel
                Grid.Row="2"
                Grid.Column="1"
                ItemHeight="350"
                ItemTemplate="{StaticResource CarouselRankingTemplate}"
                ItemWidth="220"
                ItemsSource="{Binding RankingDto}"
                RotationAngle="5"
                SelectedIndex="2" />

        </Grid>
    </ContentView>
</ContentPage>